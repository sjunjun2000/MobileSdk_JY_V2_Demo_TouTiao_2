<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jy_bg_gray_pay"
    android:orientation="vertical">


    <include
        android:id="@+id/jy_head"
        layout="@layout/jy_head" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/jy_activity_margin"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/jy_paysuccess_img_size"
                android:maxHeight="@dimen/jy_paysuccess_img_size"
                android:src="@mipmap/jy_pay_success" />

            <TextView
                android:id="@+id/tvPaySuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/jy_paysuccess_margin"
                android:text="@string/jy_activity_pay_success"
                android:textColor="@color/jy_bg_pay_success_green"
                android:textSize="@dimen/jy_size_register_large" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/jy_activity_pay_price"
                android:textColor="@color/jy_bg_pay_success_green"
                android:textSize="@dimen/jy_size_register_large" />

            <RelativeLayout
                android:id="@+id/rlGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/jy_padding_pay"
                android:paddingBottom="@dimen/jy_padding_pay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_pay_gamename"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />

                <TextView
                    android:id="@+id/tvPayGameName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_trade_name"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />


            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jy_line"
                android:background="@color/jy_line_gray_pay" />

            <RelativeLayout
                android:id="@+id/rlPayType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/jy_padding_pay"
                android:paddingBottom="@dimen/jy_padding_pay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_pay_type"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />

                <TextView
                    android:id="@+id/tvPayType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_trade_name"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />


            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jy_line"
                android:background="@color/jy_line_gray_pay" />

            <RelativeLayout
                android:id="@+id/rlCreateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/jy_padding_pay"
                android:paddingBottom="@dimen/jy_padding_pay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_create_time"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />

                <TextView
                    android:id="@+id/tvCreateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_trade_name"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />


            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jy_line"
                android:background="@color/jy_line_gray_pay" />

            <RelativeLayout
                android:id="@+id/rlOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/jy_padding_pay"
                android:paddingBottom="@dimen/jy_padding_pay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_order_id"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/jy_padding_pay"
                    android:text="@string/jy_activity_trade_name"
                    android:textSize="@dimen/jy_size_normal_waiting_dialog" />


            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jy_line"
                android:background="@color/jy_line_gray_pay" />


            <Button
                android:id="@+id/btnPayFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/jy_margin_left_pay"
                android:layout_marginTop="@dimen/jy_paysuccess_btn_margin"
                android:layout_marginRight="@dimen/jy_margin_left_pay"
                android:background="@drawable/jy_selector_bg_pay_btn"
                android:text="@string/jy_activity_pay_finish"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jy_size_register_normal" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/jy_margin_left_pay"
                android:layout_marginTop="@dimen/jy_padding_forgot_dialog"
                android:layout_marginRight="@dimen/jy_margin_left_pay"
                android:layout_marginBottom="@dimen/jy_activity_margin"
                android:background="@drawable/jy_selector_bg_history_btn"
                android:text="@string/jy_activity_search_history"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jy_size_register_normal" />


            <TextView
                android:id="@+id/tvKfTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/jy_margin_login_dialog"
                android:text="@string/jy_activity_kftel"
                android:textSize="@dimen/jy_size_normal_waiting_dialog" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>